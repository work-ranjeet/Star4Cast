@using Star4Cast.ViewModels.Manage

@model AddPhoneNumberViewModel
@{
    ViewData["Title"] = "Phone Number";
}

<div class="row">
    <div class="container">
        <div class="page-heading">
            <h1>@ViewData["Title"]</h1>
        </div>
        <form asp-controller="Manage" asp-action="AddPhoneNumber" method="post" class="form-horizontal section section-container">
            <div class="form-group">
                <label asp-for="PhoneNumber" class="col-md-2 control-label">Phone Number</label>
                <div class="col-md-10">
                    <input asp-for="PhoneNumber" class="form-control"/>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-success">Add Phone Number</button>
                </div>
            </div>
        </form>
    </div>
</div>


